@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BookingHotel.Model.Auth.ChangePasswordRequest
    <!-- Bread Crumb STRAT -->
<div class="banner inner-banner1">
    <div class="container">
        <section class="banner-detail center-xs">
            <h1 class="banner-title right-side float-none-xs">Đổi mật khẩu</h1>
            <div class="bread-crumb">
                <ul>
                    <li><a href="/"><i class="fa fa-home"></i>Trang chủ</a>/</li>
                    <li><span>Đổi mật khẩu</span></li>
                </ul>
            </div>
        </section>
    </div>
</div>
<!-- Bread Crumb END -->
<!-- CONTAIN START -->
<section class="checkout-section ptb-60">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-lg-8 col-md-8 ">
                        <form class="main-form full" asp-route="change-password">
                            <div class="row">
                                <div class="col-12 mb-20">
                                    <div class="heading-part heading-bg">
                                        <h2 class="heading">Đổi mật khẩu</h2>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label for="old-pass">Mật khẩu cũ</label>
                                        <input id="old-pass" asp-for="OldPassword" type="password" placeholder="Nhập mật khẩu cũ">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label for="new-pass">Mật khẩu mới</label>
                                        <input id="new-pass" asp-for="NewPassword" type="password" placeholder="Nhập mật khẩu mới">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <message content="@ViewBag.Content" type="@ViewBag.Type" />
                                </div>
                                <div class="col-12">
                                    <div class="new-account align-center mt-20">  <button class="btn btn-color" title="Đổi mật khẩu">Submit</button> </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- CONTAINER END -->
