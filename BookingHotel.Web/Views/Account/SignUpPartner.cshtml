@{
    Layout = null;
    var data = ViewBag.PartnerType as List<PartnerTypeModel>;
}
@model RegisterPartnerViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <vc:vc-metatag key-word="" description="" />
    <title>Đăng ký đối tác</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="/css/theme.css" rel="stylesheet">
    <link href="/vendor/icons/css/materialdesignicons.min.css" media="all" rel="stylesheet" type="text/css" />
    <link href="/vendor/select2/css/select2-bootstrap.css" />
    <link href="/vendor/select2/css/select2.min.css" rel="stylesheet" />
    <link href="/vendor/icofont/icofont.min.css" rel="stylesheet" />
    <link href="/vendor/owl-carousel/owl.carousel.css" rel="stylesheet" />
    <link href="/vendor/owl-carousel/owl.theme.css" rel="stylesheet" />
    <link href="/css/osahan.css" rel="stylesheet" />
    <link href="/css/custom.css" rel="stylesheet" />
</head>

<body id="login-main-body">
    <section class="login-main-wrapper">
        <div class="container-fluid pl-0 pr-0">
            <div class="row no-gutters">
                <div class="col-md-12 p-5 bg-white full-height vertical-center">
                    <div class="signup-cus">
                        <a class="login-back" href="/"><span class="mdi mdi-chevron-left"></span></a>
                        <div class="text-center mb-2 login-main-left-header pt-0 mr-0">
                            <img src="/images/logo.png" class="img-fluid w-80" alt="LOGO">
                            <h5 class="mt-3 mb-3">ĐĂNG KÝ TÀI KHOẢN ĐỐI TÁC</h5>
                        </div>
                        <form asp-route="sign-up-partner">
                            <div class="form-group">
                                <label>Lĩnh vực</label>
                                <select class="form-control is-invalid" id="PartnerType" asp-for="PartnerTypeId">
                                    <option value="0" selected> Chọn lĩnh vực </option>
                                    @foreach (var item in data)
                                    {
                                        <option value="@item.Id"> @item.Title </option>
                                    }
                                </select>
                            </div>
                            <div class="form-group floating-label-form-group enter-value">
                                <label>Công ty/Doanh nghiệp/Cửa hàng</label>
                                <input type="text" id="Title" asp-for="Title" class="form-control is-invalid" placeholder="Nhập thông tin">
                                @*<div class="invalid-feedback form-error pr-4 mr-2">chưa chính xác!</div>*@
                            </div>
                            <div class="form-group floating-label-form-group enter-value">
                                <label>Người đại diện</label>
                                <input type="text" id="Representative" asp-for="Representative" class="form-control is-invalid" placeholder="Nhập người đại diện">
                                @*<div class="invalid-feedback form-error pr-4 mr-2">chưa chính xác!</div>*@
                            </div>
                            <div class="form-group floating-label-form-group enter-value">
                                <label>Email</label>
                                <input type="text" id="Email" asp-for="Email" class="form-control is-invalid" placeholder="Nhập email">
                                @*<div class="invalid-feedback form-error pr-4 mr-2">chưa chính xác!</div>*@
                            </div>
                            <div class="form-group floating-label-form-group enter-value">
                                <label>Số điện thoại</label>
                                <input type="text" id="Phone" asp-for="Phone" class="form-control is-invalid" placeholder="Nhập số điện thoại">
                                @* <div class="invalid-feedback form-error pr-4 mr-2">chưa chính xác!</div>*@
                            </div>
                            <div class="form-group floating-label-form-group enter-value">
                                <label>Tài khoản</label>
                                <input type="text" id="Username" asp-for="Username" class="form-control is-invalid" placeholder="Nhập tài khoản">
                                @*<div class="invalid-feedback form-error pr-4 mr-2">chưa chính xác!</div>*@
                            </div>
                            <div class="form-group floating-label-form-group enter-value">
                                <label>Mật khẩu</label>
                                <input type="password" id="Password" asp-for="Password" class="form-control is-invalid" placeholder="Nhập mật khẩu">
                            </div>
                            <div class="mt-4">
                                <div class="row">
                                    <div class="col-12 pl-2">
                                        <button type="submit" class="btn btn-primary btn-block btn-lg">Đăng ký</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <div class="text-center mt-5">
                            <p class="light-gray">Đã có tài khoản ? <a href="/dang-nhap">Đăng nhập</a></p>
                        </div>
                        <div class="form-group mt-5">
                            <message content="@ViewBag.Content" type="@ViewBag.Type" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
