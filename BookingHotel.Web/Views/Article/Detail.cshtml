@model ArticleModel
@{
    ViewData["Title"] = "Chi tiết tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = Convert.ToString(ViewBag.Url);
}
@section metatags {
    <vc:vc-metatag key-word="@Model?.MetaKeywords" description="@Model?.MetaDescription" />
}
<!-- Bread Crumb STRAT -->
<div class="banner inner-banner1">
    <div class="container">
        <section class="banner-detail center-xs">
            <h1 class="banner-title right-side float-none-xs">Chi tiết</h1>
            <div class="bread-crumb">
                <ul>
                    <li><a href="/"><i class="fa fa-home"></i>Trang chủ</a>/</li>
                    <li><a href="/tin-tuc">Tin tức</a>/</li>
                    <li><span>@Model.Title</span></li>
