@model IEnumerable<PartnerModel>
@{
    string url = Convert.ToString(ViewBag.Url);
}
<section class="section-padding homepage-coupon">
    <div class="container">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h5 mb-0 text-gray-900">THƯƠNG HIỆU HÀNG ĐẦU</h1>
            <!--<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-eye fa-sm text-white-50"></i> Xem tất cả</a>-->
        </div>
        <div class="row  align-items-center">
            <div class="col-lg-12">
                <div class="owl-carousel owl-theme owl-carousel-partner homepage-coupon-carousel">

                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="bg-white p-4 shadow-sm text-center h-100 border-radius">
                                <div class="restaurant-detailed-header-left d-flex align-items-center">
                                    <a href="partner-detail.html">
                                        <img class="img-fluid-pic mr-3 float-left" alt="Osahan Deel" src="@item.Thumb.ToImageBrand(url)">
                                    </a>
                                    <div>
                                        <h5 class="text-gray-900 mb-2"><a href="partner-detail.html">@item.Title</a></h5>
                                        <p class="mb-1">
                                            <span class="star-rating ml-2">
                                                <a href="#"><i class="icofont-ui-rating active"></i></a>
                                                <a href="#"><i class="icofont-ui-rating active"></i></a>
                                                <a href="#"><i class="icofont-ui-rating active"></i></a>
                                                <a href="#"><i class="icofont-ui-rating active"></i></a>
                                                <a href="#"><i class="icofont-ui-rating"></i></a>
                                            </span> <span class="badge badge-primary ml-2 mt-2">@item.PartnerTypeName</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>