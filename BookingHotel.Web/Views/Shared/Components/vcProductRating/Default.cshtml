@model IEnumerable<AssessWebModel>
@{ 
    string url = Convert.ToString(ViewBag.Url);
}

<div id="ratings" class="bg-white rounded shadow-sm p-4 mb-4 restaurant-detailed-ratings-and-reviews">
    <h6 class="mb-4 text-gray-900">ĐÁNH GIÁ SẢN PHẨM</h6>
    @foreach (var item in Model)
    {
        int maxStar = (int)item.NumberStar;
        <hr>
        <div class="reviews-members pt-4 pb-4">
            <div class="media">
                <a href="#"><img alt="Generic placeholder image" src="@item.CustomerAvatar.ToImageBrand(url)" class="mr-3 rounded-pill w-40"></a>
                <div class="media-body">
                    <div class="reviews-members-header">
                        <span class="star-rating float-right">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= maxStar)
                                {
                                    <a href="#"><i class="icofont-ui-rating active"></i></a>
                                }
                                else
                                {
                                    <a href="#"><i class="icofont-ui-rating"></i></a>
                                }
                            }
                        </span>
                        <h6 class="mb-0 text-gray-800">
                            <a class="text-gray-900" href="#">@item.FullName</a>
                        </h6>
                        <p class="text-gray-600 small">@item.CreateTime?.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="reviews-members-body">
                        <p>
                           @item.Note
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
        <!--<a class="text-center w-100 d-block mt-4 font-weight-bold" href="#">See All Reviews</a>-->
    </div>
